{
  "name": "sanajaya-tailor",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.yourcompany.sanajaya-tailor",
    "productName": "Sanajaya Tailor",
    "directories": {
      "output": "dist"
    },
    "extraResources": [
      {
        "from": "../",
        "to": "laravel",
        "filter": [
          "**/*",
          "!Electron/**",
          "!node_modules/**",
          "!.git/**",
          "!storage/logs/**"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon.ico"
    }
  }
}
